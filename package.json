{
  "name": "a11y-live",
  "version": "1.0.0",
  "description": "Real-time accessibility testing tool that provides instant feedback as developers write code",
  "main": "dist/a11y-live.js",
  "module": "src/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "types/**/*"
  ],
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:watch": "webpack --mode development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "serve": "http-server dist -p 8080",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "prepublishOnly": "npm run test && npm run build",
    "start": "npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a11y-live/a11y-live.git"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "testing",
    "real-time",
    "developer-tools",
    "inclusive-design",
    "web-standards",
    "screen-reader",
    "keyboard-navigation"
  ],
  "author": "James Alaribe",
  "bugs": {
    "url": "https://github.com/a11y-live/a11y-live/issues"
  },
  "homepage": "https://a11y-live.js.org",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@playwright/test": "^1.35.0",
    "@types/jest": "^29.5.0",
    "babel-loader": "^9.1.0",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.0",
    "terser-webpack-plugin": "^5.3.9",
    "vitepress": "^1.0.0-beta.5",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {},
  "peerDependencies": {},
  "optionalDependencies": {},
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/examples/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
